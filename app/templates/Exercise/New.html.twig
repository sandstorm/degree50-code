{% extends 'BaseFullscreen.html.twig' %}
{% block layoutCssClass %}main--with-footer{% endblock %}

{% block title %}{{ "exercise.new.title"|trans({}, 'DegreeBase') }}{% endblock %}

{% block body %}
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('courses') }}">{{ "course.list.title"|trans({}, 'DegreeBase') }}</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('course', {id: course.id}) }}">{{ course.name }}</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">{{ "exercise.new.title"|trans({}, 'DegreeBase') }}</li>
            </ol>
        </nav>

        <header class="content-header content-header--center">
            <h3>{{ "exercise.new.title"|trans({}, 'DegreeBase') }}</h3>
        </header>
    </div>

    <div class="exercise-form">
        {{ form_start(form) }}
            <div class="container">
                {{ form_row(form.name) }}
                {{ form_row(form.description) }}

                <hr />
                <div class="searchable-select-field form-group" data-controller="searchableSelectField">
                    {{ form_label(form.users) }}
                    {{ form_help(form.users) }}
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fa fa-search"></i></div>
                        </div>
                        <input
                            type="search"
                            class="form-control searchable-select-field__input"
                            aria-label="{{ "course.labels.filterStudentsAria"|trans({}, 'DegreeBase') }}"
                            placeholder="{{ "course.labels.filterStudents"|trans({}, 'DegreeBase') }}"
                        />
                    </div>
                    {{ form_errors(form.users) }}
                    <div class="searchable-select-field__list">
                        {{ form_widget(form.users) }}
                    </div>
                </div>
            </div>

            <footer class="footer">
                <a class="button button--type-outline-primary footer__left" href="{{ path('course', {id: course.id}) }}">{{ "exercise.new.back"|trans({}, 'DegreeBase') }}</a>
                <div class="footer__right">
                    {{ form_row(form.save) }}
                </div>
            </footer>
        {{ form_end(form) }}
    </div>
{% endblock %}
