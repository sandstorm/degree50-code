{% extends 'BaseFullscreen.html.twig' %}
{% block layoutCssClass %}main--with-footer{% endblock %}

{% block title %}{{ "exercise.edit.title"|trans({}, 'base') }}{% endblock %}

{% block body %}
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('exercise-overview', {id: exercise.course.id}) }}">
                        {{ exercise.course.name }}
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">{{ "exercise.edit.title"|trans({}, 'base') }}</li>
            </ol>
        </nav>

        <header class="content-header">
            <h3>{{ "exercise.edit.title"|trans({}, 'base') }}</h3>
            {% if exerciseHasSolutions %}
                <div class="alert alert-warning">
                    {{ "exercise.edit.alreadyUsed"|trans({}, 'base') }}
                </div>
            {% endif %}
        </header>
        <p>
            {% set statusTransVar = 'exercise.labels.status' ~ (exercise.status) %}
            <strong>{{ "common.status"|trans({}, 'base') }}: </strong> {{ statusTransVar | trans({}, 'base') }}
            {% if exercise.status == 0 %}
                <a href="{{ path('exercise__change-status', {id: exercise.id, status: 2}) }}"
                   class="button button--type-primary button--size-small">{{ "exercise.edit.publish"|trans({}, 'base') }}</a>
            {% elseif exercise.status == 2 %}
                <a href="{{ path('exercise__change-status', {id: exercise.id, status: 0}) }}"
                   class="button button--type-danger button--size-small">{{ "exercise.edit.unpublish"|trans({}, 'base') }}</a>
            {% endif %}
        </p>
        <div class="exercise-form">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.description) }}

            <div class="exercise-form__table-header">
                <h5>{{ "common.phases"|trans({}, 'base') }} ({{ exercise.phases|length }})</h5>
                <a class="button button--type-primary button--size-small"
                   href="{{ path('exercise-phase__new', {id: exercise.id}) }}">
                    <i class="fas fa-plus"></i> {{ "exercisePhase.new.title"|trans({}, 'base') }}
                </a>
            </div>

            <table class="table">
                <thead>
                <tr>
                    <th></th>
                    <th>{{ "exercisePhase.labels.type"|trans({}, 'base') }}</th>
                    <th>{{ "exercisePhase.labels.name"|trans({}, 'base') }}</th>
                    <th>{{ "exercisePhase.labels.dependsOnPhaseName"|trans({}, 'base') }}</th>
                    <th></th>
                </tr>
                </thead>

                {% for exercisePhase in exercisePhases %}
                    {% set phaseTypeTransVar = 'exercisePhase.types.' ~ (exercisePhase.phase.type.value) ~ '.label' %}
                    <tr>
                        <td class="table-cell--no-wrap">
                            {% if exercisePhase.phase.isGroupPhase %}
                                <i class="fas fa-users"
                                   title="{{ "exercisePhase.labels.isGroupPhase"|trans({}, 'base') }}"></i>
                            {% else %}
                                <i class="fas fa-user"></i>
                            {% endif %}
                            {% if exercisePhase.phase.dependsOnExercisePhase %}
                                <i class="fas fa-arrow-up"
                                   title="{{ "exercisePhase.labels.usesResultFrom"|trans({}, 'base') }} '{{ exercisePhase.phase.dependsOnExercisePhase.name }}'"></i>
                            {% endif %}
                        </td>
                        <td>{{ phaseTypeTransVar | trans({}, 'base') }}</td>
                        <td>{{ exercisePhase.phase.name }}</td>
                        <td>
                            {% if exercisePhase.phase.dependsOnExercisePhase %}
                                {{ exercisePhase.phase.dependsOnExercisePhase.name }}
                            {% endif %}
                        </td>
                        <td class="table-cell--no-wrap text-right">
                            {% if exercisePhase.phase.hasSolutions %}
                                <a class="button button--type-outline-danger disabled button--size-small">
                                    <i class="fas fa-trash-alt"></i> {{ "exercisePhase.delete.button"|trans({}, 'base') }}
                                </a>
                            {% else %}
                                <a
                                    class="button button--type-outline-danger button--size-small"
                                    href="{{ path('exercise-phase__delete', {id: exercise.id, phase_id: exercisePhase.phase.id}) }}"
                                    onclick="return confirm('{{ "exercisePhase.delete.confirm"|trans({}, 'base') }}');"
                                >
                                    <i class="fas fa-trash-alt"></i> {{ "exercisePhase.delete.button"|trans({}, 'base') }}
                                </a>
                            {% endif %}
                            <a class="button button--type-primary button--size-small"
                               href="{{ path('exercise-phase__edit', {id: exercise.id, phase_id: exercisePhase.phase.id}) }}"
                               data-test-id="exercisePhaseEditButton"
                            >
                                <i class="fas fa-pencil-alt"></i> {{ "exercisePhase.edit.button"|trans({}, 'base') }}
                            </a>

                            <div class="button-group" role="group" aria-label="{{ "exercise.edit.changeSorting"|trans({}, 'base') }}">
                                {% if exercisePhase.canMoveUp != true %}
                                    <button
                                        class="button button--type-outline-primary button--size-small"
                                        disabled="disabled"
                                        aria-disabled="true"
                                        title="{{ "exercise.edit.changeSortingUp"|trans({}, 'base') }}"
                                        data-test-id="movePhaseUp"
                                    >
                                        <i class="fas fa-arrow-up"></i>
                                    </button>
                                {% else %}
                                    <a
                                        class="button button--type-outline-primary button--size-small"
                                        title="{{ "exercise.edit.changeSortingUp"|trans({}, 'base') }}O"
                                        href="{{ path('exercise-phase__change-sorting', {id: exercise.id, phase_id: exercisePhase.phase.id, sortUp: true}) }}"
                                        data-test-id="movePhaseUp"
                                    >
                                        <i class="fas fa-arrow-up"></i>
                                    </a>
                                {% endif %}

                                {% if exercisePhase.canMoveDown != true %}
                                    <button
                                        class="button button--type-outline-primary button--size-small"
                                        disabled="disabled"
                                        aria-disabled="true"
                                        title="{{ "exercise.edit.changeSortingDown"|trans({}, 'base') }}"
                                        data-test-id="movePhaseDown"
                                    >
                                        <i class="fas fa-arrow-down"></i>
                                    </button>
                                {% else %}
                                    <a
                                        class="button button--type-outline-primary button--size-small"
                                        title="{{ "exercise.edit.changeSortingDown"|trans({}, 'base') }}"
                                        href="{{ path('exercise-phase__change-sorting', {id: exercise.id, phase_id: exercisePhase.phase.id, sortUp: false}) }}"
                                        data-test-id="movePhaseDown"
                                    >
                                        <i class="fas fa-arrow-down"></i>
                                    </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    <footer class="footer">
        <div class="button-group footer__left">
            <a class="button button--type-outline-primary" href="{{ path('exercise-overview', {id: exercise.course.id}) }}">
                {{ "exercise.new.back"|trans({}, 'base') }}
            </a>
            {% if is_granted('exercise_test', exercise) %}
                <a class="button button--type-outline-primary" href="{{ path('exercise__test', {id: exercise.id}) }}">
                    {{ "exercise.test.title"|trans({}, 'base') }}
                </a>
            {% else %}
                <a class="button button--type-outline-primary disabled">
                    {{ "exercise.test.title"|trans({}, 'base') }}
                </a>
            {% endif %}
        </div>
        <div class="footer__right">
            {{ form_row(form.save) }}
        </div>
    </footer>
    {{ form_end(form) }}

{% endblock %}
