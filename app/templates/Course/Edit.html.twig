{% extends 'BaseFullscreen.html.twig' %}
{% block layoutCssClass %}main--with-footer{% endblock %}
{% block title %}{{ "course.edit.title"|trans({}, 'base') }}{% endblock %}

{% block body %}
    <div class="exercise-form">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('exercise-overview', {id: course.id}) }}">
                            {{ course.name }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active"
                        aria-current="page">{{ "course.edit.title"|trans({}, 'base') }}</li>
                </ol>
            </nav>
            <header class="content-header">
                <h3>{{ "course.edit.title"|trans({}, 'base') }}</h3>
            </header>

            {{ form_start(form) }}
            {{ form_errors(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.fachbereich) }}

            <div class="searchable-select-field form-group" data-controller="searchableSelectField">
                {{ form_label(form.users) }}
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fa fa-search"></i></div>
                    </div>
                    <input
                        type="search"
                        class="form-control searchable-select-field__input"
                        aria-label="{{ "course.labels.filterTutorsAria"|trans({}, 'base') }}"
                        placeholder="{{ "course.labels.filterTutors"|trans({}, 'base') }}"
                    />
                </div>
                {{ form_errors(form.users) }}
                <div class="searchable-select-field__list">
                    {{ form_widget(form.users) }}
                </div>
                {{ form_help(form.users) }}
            </div>

            <h5>{{ "course.labels.currentTutors"|trans({}, 'base') }} ({{ tutors.count }} {{ "course.labels.tutors"|trans({}, 'base') }})</h5>
            <table class="table table-sm">
                <thead>
                <tr>
                    <th>{{ "course.labels.tutor"|trans({}, 'base') }}</th>
                    <th>{{ "course.labels.role"|trans({}, 'base') }}</th>
                    <th></th>
                </tr>
                </thead>
                {% for tutor in tutors %}
                    {% if tutor.name == 'DOZENT' %}
                        <tr>
                            <td>{{ tutor.user.userName }}</td>
                            <td>{{ "course.labels.tutor"|trans({}, 'base') }}</td>
                            <td class="text-right">
                                <a href="{{ path('exercise-overview__course--remove-role', {id: course.id, userRole_id: tutor.id, redirectToEdit: true}) }}"
                                   class="button button--type-danger button--size-small">{{ "course.removeMember.title"|trans({}, 'base') }}</a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </table>
        </div>
    </div>

    <footer class="footer">
        <a class="button button--type-outline-primary"
           href="{{ path('exercise-overview', {id: course.id}) }}">{{ "course.new.back"|trans({}, 'base') }}</a>
        {{ form_row(form.save) }}
    </footer>
    {{ form_end(form) }}
{% endblock %}
