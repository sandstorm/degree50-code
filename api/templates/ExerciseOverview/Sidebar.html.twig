<div id="sidebar" class="sidebar">
    <a class="btn btn-primary btn-block" href="{{ path('exercise-overview') }}">Alle Aufgaben</a>
    <hr />
    {% for item in sidebarItems %}
        <div class="sidebar__group">
            <header id="heading{{ loop.index }}">
                <h5>
                    <button class="sidebar__toggle btn" data-toggle="collapse" data-target="#collapse{{ loop.index }}" aria-expanded="true" aria-controls="collapse{{ loop.index }}">
                        {{ item.label }} <i class="fas fa-chevron-up"></i><i class="fas fa-chevron-down"></i>
                    </button>
                </h5>
            </header>
            <div id="collapse{{ loop.index }}" class="collapse show" aria-labelledby="heading{{ loop.index }}" data-parent="#sidebar">
                <div class="sidebar__group-body">
                    <ul>
                        {% for course in item.courses %}
                            <li class="sidebar-item {{ (currentItem != false and course.id == currentItem.id) ? 'sidebar-item--active' : '' }}">
                                <a class="nav-link" href="{{ path('exercise-overview', {id: course.id}) }}">{{ course.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    {% endfor %}
</div>