{% extends 'Base.html.twig' %}

{% block title %}Video - {{ video.title }}{% endblock %}

{% block body %}
    <h2>Titel: {{ video.title }}</h2>
    <p>
        Beschreibung: {{ video.description }}
    </p>
    {% if video.encodingFinished %}
        <div data-controller="react" data-react-widget="VideoPlayer" data-react-props="{{ { 'videoJsOptions':{ 'controls': true, sources: [{src: "#{video.encodedVideoDirectory | virtualized_file_url }/hls.m3u8"}] }} | json_encode|e('html_attr')}}"></div>
        <hr />
        <a class="btn btn-primary" href="{{ video.encodedVideoDirectory | virtualized_file_url }}/x264.mp4" target="_blank">Download als .mp4</a>
    {% else %}
        <div class="alert alert-danger">
            Video-Encoding l√§uft noch...
        </div>
    {% endif %}


{% endblock %}
