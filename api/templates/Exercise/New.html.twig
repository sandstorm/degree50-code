{% trans_default_domain 'forms' %}
{% extends 'BaseFullscreen.html.twig' %}

{% block title %}{% trans %}exercise.new.title{% endtrans %}{% endblock %}

{% block body %}
    <div class="container">
        <header class="content-header content-header--center">
            <h3>{% trans %}exercise.new.title{% endtrans %}</h3>
        </header>
    </div>

    <div class="exercise-form">
        {{ form_start(form) }}
            <div class="container">
                {{ form_errors(form) }}

                {{ form_row(form.name) }}
                {{ form_row(form.description) }}
            </div>


            <footer class="form-footer">
                <a class="btn btn-outline-primary" href="{{ path('app_exercise-overview-show-course', {id: course.id}) }}">{% trans %}exercise.new.back{% endtrans %}</a>
                {{ form_row(form.save) }}
            </footer>
        {{ form_end(form) }}
    </div>

{% endblock %}
