{% trans_default_domain 'forms' %}
{% extends 'BaseFullscreen.html.twig' %}

{% block title %}{% trans %}course.editMembers.title{% endtrans %}{% endblock %}

{% block body %}
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('exercise-overview', {id: course.id}) }}">
                        {{ course.name}}
                    </a>
                </li>
                <li class="breadcrumb-item active"
                    aria-current="page">{% trans %}course.editMembers.title{% endtrans %}</li>
            </ol>
        </nav>

        <header class="content-header">
            <h3>{% trans %}course.editMembers.title{% endtrans %}</h3>
        </header>

        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.users) }}

        <h5>{% trans %}course.labels.membersStudent{% endtrans %}</h5>
        <table class="table table-sm">
            <thead>
            <tr>
                <th>{% trans %}course.labels.user{% endtrans %}</th>
                <th>{% trans %}course.labels.role{% endtrans %}</th>
                <th></th>
            </tr>
            </thead>
            {% for courseRole in course.courseRoles %}
                {% if courseRole.user.isStudent %}
                    <tr>
                        <td>{{ courseRole.user.userName }}</td>
                        <td>Student {% if courseRole.name == 'DOZENT' %}(Darf Aufgaben Erstellen){% endif %}</td>
                        <td class="text-right">
                            {% if courseRole.name == 'STUDENT' %}
                                <a href="{{ path('exercise-overview__course--upgrade-role', {id: course.id, userRole_id: courseRole.id}) }}"
                                   class="btn btn-outline-primary btn-sm">{% trans %}course.upgradeMember.title{% endtrans %}</a>
                            {% else %}
                                <a href="{{ path('exercise-overview__course--downgrade-role', {id: course.id, userRole_id: courseRole.id}) }}"
                                   class="btn btn-outline-primary btn-sm">{% trans %}course.downgradeMember.title{% endtrans %}</a>
                            {% endif %}
                            <a href="{{ path('exercise-overview__course--remove-role', {id: course.id, userRole_id: courseRole.id}) }}"
                               class="btn btn-danger btn-sm">{% trans %}course.removeMember.title{% endtrans %}</a>
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
        </table>
    </div>

    <footer class="footer">
        <a class="btn btn-outline-primary"
           href="{{ path('exercise-overview', {id: course.id}) }}">{% trans %}course.new.back{% endtrans %}</a>
        {{ form_row(form.save) }}
    </footer>
    {{ form_end(form) }}
{% endblock %}
