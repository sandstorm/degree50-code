{% trans_default_domain 'forms' %}
{% extends 'BaseFullscreen.html.twig' %}

{% block title %}{% trans %}course.edit.title{% endtrans %}{% endblock %}

{% block body %}
    <div class="exercise-form">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('exercise-overview', {id: course.id}) }}">
                            {{ course.name }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active"
                        aria-current="page">{% trans %}course.edit.title{% endtrans %}</li>
                </ol>
            </nav>
            <header class="content-header">
                <h3>{% trans %}course.edit.title{% endtrans %}</h3>
            </header>


            {{ form_start(form) }}
            {{ form_errors(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.fachbereich) }}
            {{ form_row(form.users) }}

            <h5>{% trans %}course.labels.currentTutors{% endtrans %} ({{ tutors.count }} {% trans %}course.labels.tutors{% endtrans %})</h5>
            <table class="table table-sm">
                <thead>
                <tr>
                    <th>{% trans %}course.labels.tutor{% endtrans %}</th>
                    <th>{% trans %}course.labels.role{% endtrans %}</th>
                    <th></th>
                </tr>
                </thead>
                {% for tutor in tutors %}
                    {% if tutor.name == 'DOZENT' %}
                        <tr>
                            <td>{{ tutor.user.userName }}</td>
                            <td>{% trans %}course.labels.tutor{% endtrans %}</td>
                            <td class="text-right">
                                <a href="{{ path('exercise-overview__course--remove-role', {id: course.id, userRole_id: tutor.id, redirectToEdit: true}) }}"
                                   class="button button--type-danger button--size-small">{% trans %}course.removeMember.title{% endtrans %}</a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </table>
        </div>
    </div>

    <footer class="footer">
        <a class="button button--type-outline-primary"
           href="{{ path('exercise-overview', {id: course.id}) }}">{% trans %}course.new.back{% endtrans %}</a>
        {{ form_row(form.save) }}
    </footer>
    {{ form_end(form) }}
{% endblock %}
