{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "A geographical coordinate",
  "type": "object",
  "properties": {
    "mainView": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["VideoPlayer"]
            },
            "videoUri": {
              "type": "string"
            },
            "foo": {
              "type": "string"
            }
          },
          "required": ["type", "videoUri", "foo"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["VideoAnnotator"]
            },
            "videoUri": {
              "type": "string"
            },
            "annotationSource": {
              "type": "string"
            }
          },
          "required": ["type", "videoUri", "annotationSource"]
        }
      ]
    }
  },
  "required": ["mainView"]
}
