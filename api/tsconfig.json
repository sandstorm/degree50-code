{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./assets/js",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "commonjs",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    },
    "exclude": ["public/**", "node_modules"]
}
